# Domain (required for HTTPS)
DOMAIN=notifications.yourdomain.com

# Database
DB_USER=postgres
DB_PASSWORD=your-secure-db-password
DB_NAME=notifications_platform

# App secrets (generate with: openssl rand -hex 32)
SECRET_KEY_BASE=generate-a-64-char-random-string
TOKEN_SECRET=generate-another-64-char-random-string

# Admin credentials
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your-secure-admin-password

# SMTP
SMTP_HOST=smtppro.zoho.com
SMTP_PORT=465
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=notifications@yourdomain.com
